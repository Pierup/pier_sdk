<div class="container-fluid">
    <div class="row">
    	<p class="mobile-reg-title"><span style="color:#7b37a6;">5</span>/5 确认申请</p>
    </div>
    <div class="row">
	    <div ng-show="dataLoading" style="text-align:center;">
			<h2 class="text-center;"><i class="fa fa-spin fa-spinner"></i> 正在加载数据</h2>
		</div>
	    <form ng-hide="dataLoading" action="/mobile/user/apply" method="post" >
	        <table class="confirm-table" >
	        	<tbody>
	        		<tr>
	        			<td>姓名：</td>
	        			<td><h4>{{userObj.name}}</h4></td>
	        		</tr>
	        		<tr>
	        			<td>身份证号：</td>
	        			<td><h4>{{userObj.id_number}}</h4></td>
	        		</tr>
	        		<tr>
	        			<td>常用邮箱：</td>
	        			<td>
		        			<h4 style="display:inline-block;" ng-hide="editStatus">{{userObj.email}}</h4>
		        			<input class="form-control" placeholder="请输入您的常用邮箱"  id="email" ng-model="email"  id="email" autocomplete="off" ng-show="editStatus" style="width:70%;display:inline-block;" />
		        			<span style="float:right;font-size:0.6em;margin-top:0.8em;" ng-click="changeEditStatus()" ng-hide="editStatus"><i class="fa fa-edit fa-lg"></i></span>
	        			</td>
	        		</tr>
	        		<tr ng-repeat="bankCard in bankCards">
	        			<td>银行卡：</td>
	        			<td>
		        			<h4>{{bankCard.card_num}}</h4>
		        			<span style="font-size:0.6em !important;">{{bankCard.bank_name}} &nbsp;&nbsp;{{bankCard.card_type || '借记卡'}}</span>
	        			</td>
	        		</tr>
	        	</tbody>
	        </table>
	        <div class="form-group" style="margin-left:4%;margin-right:4%;margin-top:2em;margin-bottom:0em;">
			    <label for="serviceRule" style="text-align:left !important;">
		            <input type="checkbox" name="serviceRule" ng-model="serviceRule"/>
				    <span for="serviceRule">同意</span>
				    <a style="color:#7b37a6">《品而信用隐私条款》</a>
		        </label>
		    </div>
	        <div class="form-group text-center" style="margin-left:4%;margin-right:4%;">
		        <input type="hidden" name="user_id" value={{user.user_id}} />
				<input type="hidden" name="session_token" value={{user.session_token}} />
		        <button type="submit" ng-hide="editStatus" class="submit-btn" ng-cloak>申请信用</button>
		    </div>
		    <div class="form-group text-center" style="margin-left:4%;margin-right:4%;" ng-show="editStatus">
		        <button type="button" style="width:40%;" class="submit-btn" ng-click="cancelEdit()" ng-cloak>取消</button>
		        <button type="button" style="width:40%;margin-left:4%;" ng-click="saveEmail()" class="submit-btn" ng-cloak>保存<i class="fa fa-gear fa-spin" ng-show="saveEmailFlag" ></i></button>
		    </div>
	    </form>
    </div>
</div>


