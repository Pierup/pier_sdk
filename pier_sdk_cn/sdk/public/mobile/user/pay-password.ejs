<div class="container-fluid">
    <div class="row">
    	<p class="mobile-reg-title"><span style="color:#7b37a6;">3</span>/5 设置支付密码</p>
    </div>
    <div class="row">
        <form name="registerForm" id="registerForm" class="mobile-form mobile-register-form">
		    <div class="form-group">
		        <label for="payPsd">
		            <span class="pull-left">设置支付密码：</span>
			        <span class="pull-right error-msg" ng-show="psdNotRight" style="float:right !important;" ng-cloak>支付密码为6位数字组合</span>
		        </label>
		        <input type="password" class="form-control" placeholder="请设置您的支付密码" name="payPsd"  id="payPsd" type="password" ng-model="payPsd"  ng-blur="validatePsd()" maxlength="6"  number-only-input required>
		    </div>

		    <div class="form-group">
		        <label for="payPsdConfirm">
		            <span class="pull-left">确认支付密码：</span>
			        <span class="pull-right error-msg" ng-show="psdNotMatch" style="float:right !important;" ng-cloak>您两次输入的密码不符，请重新输入</span>
		        </label>
		        <input type="password" class="form-control" placeholder="请确认您的支付密码" name="payPsdConfirm"  type="password" id="payPsdConfirm" number-only-input ng-model="payPsdConfirm" ng-blur="validatePsdMatch()" maxlength="6" required required>
		    </div>

		    <div class="form-group">
			    <label for="payPsdConfirm">
			        <span class="pull-right error-msg" ng-show="setPayError" style="float:right !important;" ng-cloak>{{setPayErrorMsg}}</span>
		        </label>
		        <button type="button" ng-click="next()" class="submit-btn" ng-cloak>下一步&nbsp;&nbsp;<i class="fa fa-gear fa-spin" ng-show="setPsdFlag" ></i></button>
		    </div>
		</form>
    </div>
</div>
