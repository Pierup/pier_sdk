<% include ../header%>
<script src="../forget-psd/forget-psd.js"></script>
<div class="container pt-0" ng-app="ForgetPassword" ng-controller="ResetController">
    <div class="content">
		<div class="title">
			<p>找回密码</p>
    	</div>
    	<div class="pier-form" style="height:540px;">
			<form class="form-horizontal forgetForm"  name="resetForm">
				<div class="form-group">
					<h4 class="text-left col-sm-offset-2 col-sm-10 " style="margin-top:70px;">请设置新的登入密码:</h4>
				</div>
		    	<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10 error" ng-show="passwordNotRight">
			           <p>密码至少包含1个数字和1个字母，并且不少于6个字符。</p>
					</div>
				    <label for="idNum" class="col-sm-2 control-label" >密码</label>
				    <div class="col-sm-10">
				        <input class="form-control" type="password" placeholder="请设置密码" name="idNum"  ng-model="password" maxlength="32" ng-blur="validPassword()"/>
				        <input type="hidden" id="token" value="<%=token%>" />
				    </div>
			    </div>
			    <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10 error" ng-show="passwordNotMatch">
                        <p>密码不匹配</p>
                    </div>
				    <label for="idNum" class="col-sm-2 control-label" >确认密码</label>
				    <div class="col-sm-10">
				        <input type="password" class="form-control" placeholder="请确认密码" name="idNum" ng-model="passwordConfirm" ng-blur="validateMatch($event)"/>
				    </div>
			    </div>

			    <div class="form-group">
				    <div class="col-sm-10 col-sm-offset-2 error" ng-show="resetError" ng-cloak>
					    <p class="error">{{errorMsg}}</p>
				    </div>
				    <label for="idNum" class="col-sm-2 control-label " ></label>
				    <div class="col-sm-10">
				        <button type="submit" class="submit-btn" ng-click="resetPsd()">重置登录密码&nbsp;&nbsp;<span ng-show="resetFlag"><i class="fa fa-gear fa-spin" ></i></span></button>
				    </div>
			    </div>
		    </form>
	    </div>
    </div>
</div>
<% include ../footer%>