<% include ../header%>
<div class="container pt-0" ng-app="ForgetPassword" ng-controller="ForgetController" >
    <div class="content">
		<div class="title">
			<p>找回密码</p>
    	</div>
    	<div class="pier-form" style="height:560px;">
	    	<form class="form-horizontal forgetForm">
		    	<div class="form-group">
			    	<h4 class="text-left col-sm-offset-2 col-sm-10" style="margin-top:70px;">请输入如下信息重置您的登入密码:</h4>
			    </div>
			    <br>
			    <div class="form-group">
				    <div class="col-sm-10 col-sm-offset-2 error" ng-show="idError">
					    <span class="error" id="idErrorMsg"></span>
				    </div>
				    <label for="idNum" class="col-sm-2 control-label" >身份证</label>
				    <div class="col-sm-10">
				        <input class="form-control" placeholder="请输入您的18位身份证号码" name="idNum" maxlength="{{idLength}}" id="idNum" ng-model="idNum" id-card-input/>
				    </div>
			    </div>
			    
			    <div class="form-group">
				    <div class="col-sm-10 col-sm-offset-2 error" ng-show="phoneError">
					    <span class="error" id="phoneErrorMsg"></span>
				    </div>
				    <label for="phone" class="col-sm-2 control-label" >手机号</label>
				    <div class="col-sm-10">
					    <input disabled="disabled" style="width:66px !important;padding-left:18px;" value="+86" />
				        <input class="form-control phone-input" placeholder="请输入中国大陆的手机号码" name="phone" id="phone" maxlength="{{phoneLength}}" number-only-input ng-model="phone" ng-change="phoneChange()"/>
				    </div>
			    </div>
			    <div class="form-group">
				    <label for="SMScode" class="col-sm-2 control-label " >短信验证码</label>
				    <div class="col-sm-10">
				        <input class="form-control valid-code-input" placeholder="请输入验证码" name="SMScode" id="smsCode" ng-model="smsCode" maxlength="4" />
				        <button class="code-btn" type="button" id="getCode" ng-click="getValidCode()" ng-disabled="hasSendCode">{{timeHandler}}&nbsp;&nbsp;<i class="fa fa-gear fa-spin" ng-show="sendCodeFlag"></i></button>
				    </div>
			    </div>

			    <div class="form-group">
			        <!-- <div class="col-sm-10 col-sm-offset-2 error" ng-show="verifyError">
					    <span class="error" id="errorMsg"></span>
				    </div> -->
				    <label for="idNum" class="col-sm-2 control-label " ></label>
				    <div class="col-sm-10">
				        <button type="button" class="submit-btn" ng-click="verifyId()">下一步&nbsp;&nbsp;<i class="fa fa-gear fa-spin" ng-show="nextFlag"></i></button>
				    </div>
			    </div>
			</form>
             
    	</div>
    </div>
</div>
<script src="js/forget-psd/forget-psd.js"></script>
<% include ../footer%>

