<% include ../checkout-header%>
<div class="container">
    <div class="login-form">
	    <div class="description">
	        <div class="merchant-info">
	            <h4><span class="gray">收款商户名称: </span><%=merchant_name%></h4>
	            <p></p>
            </div>
            <div class="merchant-amount">
                <p>总金额:</p>
                <h2><%=amount%> <span style="font-size:24px"> <%=currency%></span> </h2>
            </div>
	    </div>
	    <div class="login-wrap">
		    <div class="banner" style="background:#ccc;"></div>
		    <div class="login">
		    	<div class="header" >
			    	<p>登录品而信用</p>
		    	</div>
		    	<form class="login-body form-inline">
		    	  <br>
				  <div class="form-group">
				    <div class="input-group">
				      <div class="input-group-addon" style="width:50px;background:#fff;border-right:0px;"><i class="fa fa-lg fa-male"></i></div>
				      <input type="text" class="form-control" id="phone" placeholder="请输入您的手机号码">
				    </div>
				  </div>
				  <div class="form-group">
				    <div class="input-group">
				      <div class="input-group-addon" style="width:50px;background:#fff;border-right:0px;"><i class="fa fa-lock fa-lg"></i></div>
				      <input type="password" class="form-control" id="password" placeholder="请输入您的密码">
				      <input type="hidden" value="<%=order_id%>" id="order_id"/>
				    </div>
				  </div>
				  <p class="forget"><a class="gray" href="/user/forgetPassword">忘记密码</a></p>

				  <div class="form-group">
				    <div class="input-group">
				      <button class="checkout-login-btn" type="button">登录</button>
				    </div>
				  </div>
				  <p class="register">没有账号？<a href="/user/register" style="color:#7b37a6;">立即注册</a></p>
				</form>
		    </div>
	    </div>
    </div>
</div>
<script type="text/javascript">
	$(function(){
		$('.checkout-login-btn').click(function(){
			var _orderId = $("#order_id").val();
			window.location.href='/checkout/payment/'+_orderId;
		})
	})
</script>

<% include ../footer%>

