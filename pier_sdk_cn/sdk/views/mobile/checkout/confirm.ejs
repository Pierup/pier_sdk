<% include ../header%>
<div class="container mobile-login">
    <div class="row text-center">
	    <h3 >付款详情</h3>
    </div>
</div>
<div class="order-title">
	<p>订单信息</p>
</div>
<div class="order-detail">
    <table class="table text-center" >
	    <tbody>
	    <% order_detail.forEach(function (obj, k){ %>
            <tr>
	           <td class="text-left">
		           <%=obj.product%><br>
		           <p class="detail"><%=obj.detail%></span></p>
	           <td style="width:36%;font-size:16px;">
		           <span style="color:#7b37a6;"><%=obj.price%></span> &nbsp; X &nbsp;<%=obj.count%>
		           <p style="margin-top:0.6em;">共计：<%=obj.total%></p>
	           </td>
	        </tr>
        <% }) %>
        </tbody>
	</table>
</div>
<div class="order-confirm">
    <div class="row confirm">
        <span>收款方：</span><span class="pull-right"><%=merchant_name%></span>
        <hr style="border:1 dotted #000">
        <span>付款金额: </span><span class="pull-right" style="font-size:1.8em;color:#7b37a6;margin-top:-0.2em;">￥<%=amount%></span>
    </div>
	<div class="container-fluid">
        <div class="row">
	        <button type="button" onclick="window.location.href='/mobile/checkout/payment?merchant=<%=merchant_id%>&order=<%=order_id%>&action=10008'" class="submit-btn" >确认支付</button><br><BR>
        </div>
	</div>
</div>

<% include ../footer%>